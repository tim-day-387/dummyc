#!/usr/bin/env bash

if [ $# != 1 ]
then
  echo "Wrong number of arguments."
  exit
fi

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ cargo test ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
cargo test

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ cargo build ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
cargo build

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ custom_test ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
./scripts/custom_test $1

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ error_test ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
./scripts/error_test $1

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ nbs_test ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
./scripts/nbs_test $1

echo "~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~"
