10 REM BUBBLE SORT PROGRAM
20 REM RANDOMIZE
30 DIM A(100)
40 FOR I=0 TO 99 STEP 1
50 LET A(I)=INT(RND*1000)
60 NEXT I
70 GOSUB 500
80 FOR I=0 TO 98 STEP 1
90 IF A(I)<=A(I+1) THEN 120
100 PRINT "SORT FAILED"
110 GOTO 140
120 NEXT I
130 PRINT "SORT SUCCEEDED"
140 GOSUB 600
150 STOP
500 REM BUBBLE SORT SUBROUTINE
510 FOR I=99 TO 0 STEP -1
520 FOR J=0 TO I-1 STEP 1
530 IF A(J)<A(J+1) THEN 570
540 LET T=A(J)
550 LET A(J)=A(J+1)
560 LET A(J+1)=T
570 NEXT J
580 NEXT I
590 RETURN
600 REM DUMP ARRAY CONTENTS
610 FOR I=0 TO 99 STEP 1
620 PRINT A(I),
630 NEXT I
640 PRINT
650 RETURN
660 END
